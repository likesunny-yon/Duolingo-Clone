<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="e.rick.duolingoclone.WordTask"
    android:background="#f5f5f5"
    android:padding="16dp">

    <include layout="@layout/tasks_progress_bar"/>

    <include layout="@layout/task_default_body"
        android:id="@+id/task_default_body"/>

    <LinearLayout
        android:layout_below="@+id/task_default_body"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/gray_bottom_border"/>

    <Button
        android:id="@+id/check_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="check"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
